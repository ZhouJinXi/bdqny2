<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
 <context-param>
  <param-name>MyAllServletParam</param-name>
  <param-value>allvalue</param-value>
 </context-param>
 <servlet>
  <description>This is the description of my J2EE component</description>
  <display-name>This is the display name of my J2EE component</display-name>
  <servlet-name>MyInitParamServlet</servlet-name>
  <servlet-class>com.bdqn.servlet.MyInitParamServlet</servlet-class>
  <init-param>
   <param-name>myconfig</param-name>
   <param-value>mystruts.xml</param-value>
  </init-param>
 </servlet>
 <servlet-mapping>
  <servlet-name>MyInitParamServlet</servlet-name>
  <url-pattern>/myinitparam</url-pattern>
 </servlet-mapping>
 <welcome-file-list>
  <welcome-file>index.jsp</welcome-file>
 </welcome-file-list>
 <login-config>
  <auth-method>BASIC</auth-method>
 </login-config>
</web-app>
