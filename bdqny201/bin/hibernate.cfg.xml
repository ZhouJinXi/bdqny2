<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>
	<!--
		session-factory标签描述当前数据库下的配置信息，如果有多个数据库则生产多个session-factory 
	-->
	<session-factory>
		<!--
			dialect:数据库方言，说明一下：每个数据库都有自己特有的函数或关键字，要告诉HIBERNATE使用对应的 
		-->
		<property name="dialect">
			org.hibernate.dialect.Oracle9Dialect
		</property>
		<!--
			url串：数据库信息 
		-->
		<property name="connection.url">
			jdbc:oracle:thin:@192.168.240.134:1522:orcl
		</property>
		<!-- 
			username：用户名
		-->
		<property name="connection.username">scott</property>
		<!--
			password:密码 
		-->
		<property name="connection.password">tiger</property>
		<!--
			driver_class:数据库驱动类路径 
		-->
		<property name="connection.driver_class">
			oracle.jdbc.OracleDriver
		</property>
		<property name="show_sql">true</property>
		<!--
			mapping标签：描述xxx.hbm.xml映射文件的信息
			resource属性：为xml路径
			
			注意：有多少个xxx.hbm.xml就会有多个mapping标签 
		-->
		<mapping resource="com/bdqn/hibernate/domain/HtUsers.hbm.xml" />

	</session-factory>

</hibernate-configuration>